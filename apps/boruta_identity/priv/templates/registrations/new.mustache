<h1>Register</h1>

{{^valid?}}
<div class="ui error message">
{{#errors}}
  <li>{{ message }}</li>
{{/errors}}
</div>
{{/valid?}}

<form class="ui form" action="{{ create_user_registration_path }}" method="POST">
  <input type="hidden" name="_csrf_token" value="{{ _csrf_token }}" />

  <div class="field">
    <label for="user_email">Email</label>
    <input type="email" id="user_email" name="user[email]" />
  </div>

  <div class="field">
    <label for="user_password">Password</label>
    <input type="password" id="user_password" name="user[password]" />
  </div>

  <button class="ui fluid button" type="submit">Register</button>
</form>

<p>
  <a href="{{ new_user_session_path }}">Log in</a> | <a href="{{ new_user_reset_password_path }}">Forgot your password?</a>
</p>
