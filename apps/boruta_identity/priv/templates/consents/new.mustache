<div class="ui segment" style="max-width: 400px;">
  <h1 style="padding: 0 30px 30px 30px;" class="ui center aligned icon header">
    <i class="circular address card icon"></i>
    <strong>{{ client.name }}</strong> require access to your data
  </h1>
  <div class="ui large form">
    <form action="{{ create_user_consent_path }}" method="POST">
      <input type="hidden" name="_csrf_token" value="{{ _csrf_token }}" />
      {{#scopes}}
      <div class="field">
        <div class="ui checkbox">
          <input type="checkbox" name="scopes[]" id="{{ name }}" value="{{ name }}" checked="checked">
          <label class="content" for="{{ name }}">{{ label }}</label>
        </div>
      </div>
      {{/scopes}}
      <hr />
      <button type="submit" class="ui fluid button">Consent</button>
    </form>
  </div>
</div>
